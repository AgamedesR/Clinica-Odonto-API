generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Secretario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  telefone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("secretarios")
}

model Dentista {
  id            Int        @id @default(autoincrement())
  nome          String
  email         String     @unique
  cro           String     @unique
  especialidade String
  consultas     Consulta[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("dentistas")
}

model Paciente {
  id             Int        @id @default(autoincrement())
  nome           String
  email          String     @unique
  cpf            String     @unique
  telefone       String?
  dataNascimento DateTime   @db.Date
  consultas      Consulta[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@map("pacientes")
}

model Consulta {
  id         Int      @id @default(autoincrement())
  dataHora   DateTime
  motivo     String?
  pacienteId Int
  dentistaId Int
  paciente   Paciente @relation(fields: [pacienteId], references: [id])
  dentista   Dentista @relation(fields: [dentistaId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("consultas")
}
